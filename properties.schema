        "small": {
          "type": "string",
          "required": true,
          "default": "",
          "title": "Splash SMALL image",
          "inputType": "Text",
          "validators": [],
          "help": "",
          "translatable": false
        },
        "portrait": {
          "type": "string",
          "required": true,
          "default": "",
          "title": "Splash PORTRAIT image",
          "inputType": "Text",
          "validators": [],
          "help": "",
          "translatable": false
        },
        "alt": {
          "type": "string",
          "required": true,
          "default": "",
          "title": "Splash image ALT",
          "inputType": "Text",
          "validators": [],
          "help": "",
          "translatable": true
        }
      }
